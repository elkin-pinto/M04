<?xml version="1.0" encoding="UTF-8"?>
<receta>
    <titulo>Como hacer pasta a la carbonara</titulo>
    <imagen_portada>inserte_imagen_promedio_de_pasta_carbonara.img</imagen_portada>
    <ingredientes_x_Persona>
        <ingrediente>
            <tipo>pasta</tipo>
            <cantidad>200g</cantidad>
        </ingrediente>
        <ingrediente>
            <tipo>nata</tipo>
            <cantidad>150ml</cantidad>
        </ingrediente>
        <ingrediente>
            <tipo>bacon</tipo>
            <cantidad>50g</cantidad>
        </ingrediente>
        <ingrediente>
            <tipo>chapiñones fileteados</tipo>
            <cantidad>50g</cantidad>
        </ingrediente>
        <ingrediente>
            <tipo>cebolla</tipo>
            <cantidad>150g</cantidad>
        </ingrediente>
        <ingrediente>
            <tipo>aceite de oliva</tipo>
            <cantidad>10ml</cantidad>
        </ingrediente>
        <ingrediente>
            <tipo>huevo</tipo>
            <cantidad>1</cantidad>
        </ingrediente>
        <ingrediente>
            <tipo>agua</tipo>
            <cantidad>1L</cantidad>
        </ingrediente>
        <ingrediente>
            <tipo>sal</tipo>
            <cantidad>3g</cantidad>
        </ingrediente>
        <ingrediente>
            <tipo>pimineta molida</tipo>
            <cantidad>2g</cantidad>
        </ingrediente>
    </ingredientes_x_Persona>
    <utencilios>
        <utencilio>Cazuela</utencilio>
        <utencilio>sarten</utencilio>
        <utencilio>Cuchillo</utencilio>
        <utencilio>Tabla de cortar</utencilio>
    </utencilios>
    <pasos_a_seguir>
        <parte orden="Primero">
            <paso orden="1">Pon a cocer la pasta en la cazuela con abundante agua a punto de ebullición</paso>
            <paso orden="2">Agrega la sal</paso>
            <paso orden="3">Cocina durante 10-12 minutos</paso>
        </parte>
        <parte orden="Segundo">
            <paso orden="1">Pica cebolla en cuadritos de media pulgada</paso>
            <paso orden="2">Corta en tacos el bacon</paso>
            <paso orden="3">Pon a dorar la cebolla y el bacon en la sarten con la mantequilla</paso>
            <paso orden="4">Cuando cojan color, añade los champiñones laminados y sazona</paso>
            <paso orden="5">Cocina e incorpora la nata y la pimienta molida</paso>
            <paso orden="6">Agrega los espaguetis, mezcla y cocina 5 minutos más</paso>
            <paso orden="7">Saca los spaguetti ya acabados</paso>
            <paso orden="8">Justo antes de servir, añade la yema de huevo y mezcla</paso>
        </parte>
    </pasos_a_seguir>
</receta>